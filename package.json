    "ajv": "^5.5.2",
    "bitbox-mock": "^1.0.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-standard": "^4.0.0",
    "nock": "^10.0.6",
    "sinon": "^7.3.2",
    "slp-sdk-mock": "^1.0.2",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "semantic-release": "^17.0.0",
    "standard": "^14.3.1"
  },
